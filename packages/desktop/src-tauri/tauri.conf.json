{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "HelixDB Explorer",
  "version": "0.1.0",
  "identifier": "com.helixdb.explorer",
  "build": {
    "beforeDevCommand": "pnpm --filter @helixdb/app dev",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../../app/dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "",
        "width": 1100,
        "height": 750,
        "minWidth": 800,
        "minHeight": 350,
        "titleBarStyle": "Overlay",
        "transparent": true,
        "resizable": true,
        "center": true,
        "visible": false,
        "backgroundColor": "#2a2a2a"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/256x256.png", "icons/1024x1024.png", "icons/icon.icns", "icons/icon.ico"],
    "dmg": {
      "background": "icons/dmg-background.png",
      "windowSize": {
        "width": 660,
        "height": 400
      },
      "appPosition": {
        "x": 170,
        "y": 170
      },
      "applicationFolderPosition": {
        "x": 480,
        "y": 170
      }
    }
  }
}
